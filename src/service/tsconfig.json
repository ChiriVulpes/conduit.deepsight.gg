{
	"compilerOptions": {
		"strict": true,
		"target": "ES2024",
		"lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext.Iterator", "WebWorker"],
		"moduleResolution": "node",
		"outFile": "../../out/service/index.js",
		"module": "AMD",
		"baseUrl": ".",
		"incremental": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"preserveSymlinks": true,
		"paths": {
			"@shared/*": [
				"../shared/*"
			],
		}
	},
	"references": [
		{"path": "../shared" }
	],
	"include": [
		"bundle/amd.js",
		"bundle/dexie.js",
		"node_modules/dexie/dist/dexie.min.js",
		"bundle/jsonpath.js",
		"node_modules/jsonpath-plus/dist/index-browser-umd.min.cjs",
		"**/*.ts",
		"bundle/init.js"
	]
}