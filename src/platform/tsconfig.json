{
	"compilerOptions": {
		"strict": true,
		"target": "ES2024",
		"lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext.Iterator"],
		"moduleResolution": "node",
		"outFile": "../../out/service/platform.js",
		"module": "amd",
		"baseUrl": ".",
		"incremental": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"paths": {
			"*": [
				"./*",
				"../client/*",
				"../shared/*"
			],
			"lang": ["./lang/index.d.ts"],
			"style": ["./style/index.d.ts"],
			"kitsui": ["./node_modules/kitsui/index.d.ts"],
			"kitsui/*": ["./node_modules/kitsui/*"],
		}
	},
	"references": [
		{ "path": "../client" },
		{ "path": "../shared" }
	],
	"include": [
		"bundle/amd.js",
		"**/*.ts"
	]
}