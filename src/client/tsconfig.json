{
	"compilerOptions": {
		"strict": true,
		"target": "ES2024",
		"lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext.Iterator"],
		"moduleResolution": "node",
		"outFile": "../../out/client/index.js",
		"declaration": true,
		"module": "amd",
		"baseUrl": ".",
		"incremental": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"composite": true,
		"paths": {
			"@shared/*": [
				"../shared/*"
			],
		}
	},
	"references": [
		{"path": "../shared" }
	],
	"include": [
		"**/*.ts",
	]
}