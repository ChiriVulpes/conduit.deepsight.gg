{
	"compilerOptions": {
		"strict": true,
		"target": "ES2024",
		"lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext.Iterator", "WebWorker"],
		"moduleResolution": "node",
		"outDir": "../../out/service",
		"declarationDir": "../client/frame",
		"module": "commonjs",
		"baseUrl": ".",
		"incremental": true,
		"composite": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"preserveSymlinks": true,
		"paths": {
			"@shared/*": [
				"../shared/*"
			],
		}
	},
	"references": [
		{"path": "../shared" }
	],
	"include": [
		"**/*.ts"
	]
}